{
  "compilerOptions": {
    "target": "ES6",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "src",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@src/*": ["./*"],
      "@assets/*": ["assets/*"],
      "@ccxt": ["_npm/ccxt"],
      "@states/*": ["states/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"],
      "@constants/*": ["constants/*"],
      "@components/*": ["components/*"]
    }
  },
  "include": ["src", ".eslintrc.cjs", "tailwind.config.cjs", "vite.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
